<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    {% block head %}

    {% endblock %}
    <style>
        .page-wrapper{
            font-family: 'Roboto', sans-serif;
        }
        .title-wrapper h1{
            font-size: 64x;
            text-align: center;
            padding-top: 3rem;
        }
        .btn{
            background-color: #371055;
            color: whitesmoke;
            max-width: 100vh;
            text-align: center;
        }
        .btn-2{
            background-color: darkgrey;
            color: whitesmoke;
            max-width: 100vh;
            text-align: center;
        }
        .btn:hover{
            color: whitesmoke;
        }
        .form-group select{
            max-width: 100vh;
            display: block;
            margin: 0 auto;
        }
        .form-group input{
            max-width: 100vh;
            display: block;
            margin: 0 auto;
        }
        .form-group input{
            display: block;
            margin: 0 auto;
        }
        .form-group hr{
            max-width: 75vh;
            display: block;
            margin: 0 auto;
            border: none;
            height: 3px;
            background-color: #202020;
        }
        .form-group label {
            display: block;
            margin: 0 auto;
            text-align: center;
        }
        .form-group button {
            display: block;
            margin: 0 auto;
            text-align: center;
        }
        .other-options input{
            max-width: 50vh;
            display: block;
            margin: 0 auto;
        }
        .other-options select{
            max-width: 50vh;
            display: block;
            margin: 0 auto;
        }
        .bg {
        height: 100vh;
        background: url({{ url_for('static', filename = 'canada.png') }}) right 2rem top 2rem, url({{ url_for('static', filename = 'worldwide.png') }}) left 2rem top 2rem;
        background-repeat: no-repeat;
        background-size: cover;
        background-size: 75vh;
        animation: fade3 2.2s;
        background-size: auto 20rem;
        }
        @keyframes fade3 {
    from { opacity: 0; transform: translateY(100px); }
    to   { opacity: 1; transform: translateY(0px); }
    }
        .navbar{
            animation: fadeIn 2s ease-in both;
        }
        @keyframes fadeIn {
	from {
		opacity: 0;
		transform: translate3d(0, -20%, 0);
	}
	to {
		opacity: 1;
		transform: translate3d(0, 0, 0);
	    }
    }
    </style>
</head>
<body>
{% block content %}
<div class="bg">
    <div class="title-wrapper">
        <h1>CITES Permit OCR</h1>
    </div>
<form method="POST">
  <div class="form-group">
  <br>
    <label for="country">Country of Permit</label>
    <select class="form-control" id="country" name="country">
      <option>CHE</option>
      <option>USA</option>
      <option>CAN</option>
    </select>
    <br>
    <label for="input_location">Permit(s) Location</label>
    <input type="text" id="input_location" name="input_location" class="form-control" placeholder="Input Folder" required>
    
    <br>
    <label for="output_location">Output .CSV Location</label>
    <input type="text" id="output_location" name="output_location" class="form-control" placeholder="Output Location" required>
    <br>
    <label for="output_name">.CSV Name</label>
    <input type="text" id="output_name" name="output_name" class="form-control" placeholder="Output Name" required>
    <br>
    <hr>
    <br>
    <div class="other-options">
    <select class="form-control" id="runs" name="runs">
      <option>1 Run</option>
      <option>Multiple Runs</option>
    </select>
    <input type="text" id="time" name="time" class="form-control" placeholder="Idle Time(s)">
    </div>
    <br>
    <hr>
    <br>
    <br>
    <a href=""><button class="btn">Run OCR</button></a>
  </div>
 
</form>
</div>
{% endblock %}
</body>